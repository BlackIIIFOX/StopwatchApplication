            <Grid Grid.Row="2">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding StopwatchViewMode}" Value="{x:Static enumStateMode:StopwatchViewModes.Launch}">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>

                            <DataTrigger Binding="{Binding StopwatchViewMode}" Value="{x:Static enumStateMode:StopwatchViewModes.DisplayLap}">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Button Width="90" Margin="40,-5,0,0">
                        <Button.Style>
                            <Style BasedOn="{StaticResource StylePushButton}" TargetType="Button">
                                <Setter Property="Command" Value="{Binding StartNewLapStopwatchCommand}" />

                                <Setter Property="Content">
                                    <Setter.Value>
                                        <Grid>
                                            <materialDesign:PackIcon
                                                Width="90"
                                                Height="90"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Foreground="#FFDF66"
                                                Kind="CircleOutline" />

                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontFamily="Stormfaze"
                                                FontSize="40"
                                                FontWeight="Bold"
                                                Foreground="#FFDF66"
                                                Text="L" />
                                        </Grid>
                                    </Setter.Value>
                                </Setter>

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StopwatchViewMode}" Value="{x:Static enumStateMode:StopwatchViewModes.Wait}">
                                        <Setter Property="Command" Value="{Binding ResetStopwatchCommand}" />

                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <Grid>
                                                    <materialDesign:PackIcon
                                                        Width="90"
                                                        Height="90"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Foreground="#FFDF66"
                                                        Kind="CircleOutline" />

                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        FontFamily="Stormfaze"
                                                        FontSize="40"
                                                        FontWeight="Bold"
                                                        Foreground="#FFDF66"
                                                        Text="R" />
                                                </Grid>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <Grid Grid.Column="1">
                    <Button Width="90" Margin="0,-5,40,0">
                        <Button.Style>
                            <Style BasedOn="{StaticResource StylePushButton}" TargetType="Button">
                                <Setter Property="Command" Value="{Binding StopStopwatchCommand}" />

                                <Setter Property="Content">
                                    <Setter.Value>
                                        <Grid>
                                            <materialDesign:PackIcon
                                                Width="90"
                                                Height="90"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Foreground="Red"
                                                Kind="CircleOutline" />

                                            <materialDesign:PackIcon
                                                Width="60"
                                                Height="60"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Foreground="Red"
                                                Kind="Stop" />
                                        </Grid>
                                    </Setter.Value>
                                </Setter>

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding StopwatchViewMode}" Value="{x:Static enumStateMode:StopwatchViewModes.Wait}">
                                        <Setter Property="Command" Value="{Binding StartStopwatchCommand}" />

                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <Grid>
                                                    <materialDesign:PackIcon
                                                        Width="90"
                                                        Height="90"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Foreground="Green"
                                                        Kind="CircleOutline" />

                                                    <materialDesign:PackIcon
                                                        Width="60"
                                                        Height="60"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Foreground="Green"
                                                        Kind="Play" />
                                                </Grid>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Grid>

            <Button
                Name="Quit"
                Grid.Row="3"
                Width="60"
                Height="25"
                Margin="0,0,0,10"
                Padding="5,5,5,5"
                VerticalAlignment="Bottom"
                Background="#FFDF66"
                BorderThickness="0"
                Command="{Binding CloseAppCommand}"
                Content="Close"
                FontFamily="Stormfaze"
                FontSize="14"
                Foreground="Black"
                Style="{StaticResource StylePushButton}" />
        </Grid>
    </Border>

</Window>
